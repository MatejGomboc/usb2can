{
    "cSpell.caseSensitive": true,
    "cSpell.checkOnlyEnabledFileTypes": true,
    "cSpell.useGitignore": true,
    "cSpell.languageSettings": [
        { "languageId": "*", "locale": "en-GB", "dictionaries": ["wordsEnGb"] },
        { "languageId": "*", "dictionaries": ["companies", "softwareTerms", "misc"] }
    ],
    "cSpell.words": [
        "atexit",
        "CMSIS",
        "cortexm0plus",
        "cref",
        "dissassebly",
        "fdata",
        "ffreestanding",
        "ffunction",
        "fstack",
        "Gomboc",
        "isrs",
        "licence",
        "licences",
        "masm",
        "Matej",
        "mcpu",
        "mfloat",
        "microcontrollers",
        "mthumb",
        "nostdlib",
        "nvic",
        "OBJCOPY",
        "OBJDUMP",
        "rtti",
        "special_regs",
        "systick",
        "threadsafe",
        "Wconversion",
        "Wdouble",
        "Wextra",
        "Wmissing",
        "Wswitch"
    ],
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.renderWhitespace": "boundary"
}
